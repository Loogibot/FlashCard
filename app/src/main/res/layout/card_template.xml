<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".card_template">

    <!-- TODO: Update blank fragment layout -->

    <Button
        android:id="@+id/audio_record3"
        android:layout_width="60"
        android:layout_height="60"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="64dp"
        app:layout_constraintEnd_toStartOf="@+id/audio_record4"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/progressBar" />

    <Button
        android:id="@+id/audio_record4"
        android:layout_width="60"
        android:layout_height="60"
        android:layout_marginTop="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.954"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/progressBar" />

    <Button
        android:id="@+id/audio_record2"
        android:layout_width="60"
        android:layout_height="60"
        android:layout_marginTop="24dp"
        app:layout_constraintEnd_toStartOf="@+id/audio_record3"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/audio_record"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/progressBar" />

    <TextView
        android:id="@+id/flash_card_title"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="@string/flash_card_title"
        android:textSize="20sp"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="64dp" />

    <TextView
        android:id="@+id/card_description"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:text="@string/card_description"
        android:textSize="20sp"
        app:layout_constraintTop_toBottomOf="@+id/flash_card_title"
        tools:layout_editor_absoluteX="120dp" />

    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="match_parent"
        android:layout_height="300"
        app:layout_constraintTop_toBottomOf="@+id/card_description"
        tools:layout_editor_absoluteX="0dp" />

    <Button
        android:id="@+id/audio_record"
        android:layout_width="60"
        android:layout_height="60"
        android:layout_marginStart="36dp"
        android:layout_marginTop="24dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/progressBar" />


</androidx.constraintlayout.widget.ConstraintLayout>