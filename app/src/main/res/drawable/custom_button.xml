<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Define the background properties like color etc, this creates
    gradient style, meant for progress bar
    -->
    <item>
        <shape>
            <gradient
                android:type="sweep"
                android:startColor="@color/Mint_Cream"
                android:centerColor="@color/Misty_Rose"
                android:endColor="@color/Mint_Cream"
                android:useLevel="false" />
            <corners android:radius="10dp" />
            <stroke
                android:width="3dp"
                android:color="@color/Mint_Cream" />
        </shape>
    </item>
</layer-list>